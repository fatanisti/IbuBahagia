<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fkc.ibubahagia">
    <uses-permission android:name="android.permission.INTERNET" />
    <queries>
        <package android:name="com.google.android.apps.maps" />
        <package android:name="com.android.vending"/>
    </queries>
    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:largeHeap="true"
        android:hardwareAccelerated="false"
        android:supportsRtl="true"
        android:theme="@style/Theme.IbuBahagia">
        <service
            android:name=".MusicService"
            android:enabled="true" />
        <activity android:name=".SplashScreen"
            android:screenOrientation="portrait"
            android:configChanges="orientation"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity" android:screenOrientation="portrait" android:configChanges="orientation">
        </activity>
        <activity
            android:name=".IntroActivity" android:screenOrientation="portrait" android:configChanges="orientation">
        </activity>
        <activity
            android:name=".KebkehActivity" android:screenOrientation="portrait" android:configChanges="orientation">
        </activity>
        <activity
            android:name=".AidActivity" android:screenOrientation="portrait" android:configChanges="orientation">
        </activity>
        <activity
            android:name=".TmdActivity" android:screenOrientation="portrait" android:configChanges="orientation">
        </activity>
        <activity
            android:name=".CheckconActivity" android:screenOrientation="portrait" android:configChanges="orientation">
        </activity>
        <activity
            android:name=".ContactActivity" android:screenOrientation="portrait" android:configChanges="orientation">
        </activity>
    </application>
</manifest>