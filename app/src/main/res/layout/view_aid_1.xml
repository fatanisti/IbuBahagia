<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">
        <ScrollView
            android:id="@+id/intro"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_solid"
            android:paddingTop="30dp"
            android:paddingBottom="@dimen/pad_xxh_72"
            android:paddingHorizontal="@dimen/pad_xxh_27"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottom">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/konten_aid_intro_1"
                    android:textSize="@dimen/font_size_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="30dp" />
            </LinearLayout>
        </ScrollView>
        <View
            android:id="@+id/bottom"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/intro"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
            android:id="@+id/gambar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="10dp"
            android:src="@drawable/pichome"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintTop_toTopOf="@id/bottom"
            app:layout_constraintBottom_toBottomOf="@id/bottom"
            app:layout_constraintStart_toStartOf="@id/bottom"
            app:layout_constraintEnd_toStartOf="@id/intro2"/>
        <TextView
            android:id="@+id/intro2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingVertical="30dp"
            android:paddingStart="70dp"
            android:paddingEnd="20dp"
            android:text="@string/konten_aid_intro_2"
            android:textSize="@dimen/font_size_2"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:fontFamily="@font/chewy"
            android:background="@drawable/grad_bg"
            app:layout_constraintHorizontal_weight="3"
            app:layout_constraintStart_toEndOf="@id/gambar"
            app:layout_constraintTop_toTopOf="@id/bottom"
            app:layout_constraintBottom_toBottomOf="@id/bottom"
            app:layout_constraintEnd_toEndOf="@id/bottom" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>