<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@drawable/background_2">
        <TextView
            android:id="@+id/title_bantuan"
            android:layout_width="0dp"
            android:layout_height="0dp"
            style="@style/TitleFontStyle"
            android:text="@string/menu_item_5"
            app:layout_constraintBottom_toTopOf="@id/sub_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_weight="1"/>
        <TextView
            android:id="@+id/sub_title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textAlignment="center"
            android:textStyle="bold"
            app:autoSizeTextType="uniform"
            android:text="@string/help_item_1"
            app:layout_constraintBottom_toTopOf="@id/contacts_list"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_bantuan"
            app:layout_constraintVertical_weight="1" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/contacts_list"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginVertical="20dp"
            app:layout_constraintBottom_toTopOf="@id/btn_home"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/sub_title"
            tools:listitem="@layout/activity_contact_row"
            app:layout_constraintVertical_weight="8" />

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_home"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            app:cardBackgroundColor="@color/purple_main"
            app:cardCornerRadius="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/contacts_list"
            app:layout_constraintVertical_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingHorizontal="20dp"
                android:text="@string/nav_home"
                android:textColor="@color/cream_main"
                android:textSize="@dimen/font_size_1"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>