<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <View
            android:id="@+id/container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/purple_main"
            app:layout_constraintVertical_weight="1.5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/konten2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="20dp"
            android:text="@string/konten_aid_second"
            style="@style/SubtitleFontStyle"
            app:layout_constraintBottom_toTopOf="@id/konten1"
            app:layout_constraintEnd_toEndOf="@id/container"
            app:layout_constraintStart_toStartOf="@id/container"
            app:layout_constraintTop_toTopOf="@id/container"
            app:layout_constraintVertical_weight="1"/>
        <TextView
            android:id="@+id/konten1"
            android:text="@string/konten_aid_second_poin_1"
            android:textSize="@dimen/font_size_2"
            android:textColor="@color/white"
            android:layout_marginHorizontal="20dp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintBottom_toTopOf="@id/bullet_konten1"
            app:layout_constraintStart_toStartOf="@id/container"
            app:layout_constraintEnd_toEndOf="@id/container"
            app:layout_constraintVertical_weight="2"/>
        <TableLayout
            android:id="@+id/bullet_konten1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="20dp"
            android:stretchColumns="1"
            android:gravity="center_horizontal|top"
            app:layout_constraintVertical_weight="3"
            app:layout_constraintTop_toBottomOf="@id/konten1"
            app:layout_constraintBottom_toBottomOf="@id/container"
            app:layout_constraintStart_toStartOf="@id/container"
            app:layout_constraintEnd_toEndOf="@id/container">
            <TableRow android:orientation="horizontal">
                <ImageView
                    android:layout_height="@dimen/px_xxh_80"
                    android:scaleType="fitStart"
                    android:layout_marginEnd="10dp"
                    android:layout_width="0dp"
                    android:layout_weight="0.1"
                    android:src="@drawable/bullet_flower_bw"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="0.9"
                    android:textSize="@dimen/font_size_2"
                    android:textColor="@color/white"
                    android:text="@string/konten_aid_second_poin_2"/>
            </TableRow>
        </TableLayout>
        <ImageView
            android:id="@+id/konten2"
            android:src="@drawable/pic6dina"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:padding="20dp"
            app:layout_constraintVertical_weight="1"
            app:layout_constraintTop_toBottomOf="@id/container"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>