<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp">
        <TextView
            android:id="@+id/epilog"
            android:text="@string/konten_aid_epilog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:gravity="center"
            android:textSize="@dimen/font_size_4"
            android:textColor="@color/purple_dark"
            android:fontFamily="@font/chewy"
            android:background="@drawable/grad_bg"
            android:paddingVertical="@dimen/pad_xxh_60"
            android:paddingStart="@dimen/pad_xxh_72"
            android:paddingEnd="@dimen/pad_xxh_12"
            android:textColorHighlight="@color/purple_main"
            android:textColorLink="@color/cream_main"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn_home"
            app:layout_constraintVertical_chainStyle="packed"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/btn_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="goHome"
            app:cardBackgroundColor="@color/purple_main"
            app:cardCornerRadius="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/epilog">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="20dp"
                android:text="@string/nav_home"
                android:textColor="@color/cream_main"
                android:textSize="@dimen/font_size_1"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>