<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        tools:context=".MainActivity"
        android:background="@drawable/background_1">
        <TextView
            android:id="@+id/label_home"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            android:text="@string/label_home"
            style="@style/TitleFontStyle"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/top"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_weight="1"/>
        <View
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/label_home"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_weight="3"/>
        <ImageView
            android:id="@+id/gia"
            android:src="@drawable/pichome"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/top"
            app:layout_constraintBottom_toBottomOf="@id/top"
            app:layout_constraintStart_toStartOf="@id/top"
            app:layout_constraintEnd_toStartOf="@id/intro"
            app:layout_constraintHorizontal_weight="1"/>
        <View
            android:id="@+id/control"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="@id/top"
            app:layout_constraintBottom_toBottomOf="@id/top"
            app:layout_constraintEnd_toEndOf="@id/top"
            app:layout_constraintStart_toEndOf="@id/intro"
            app:layout_constraintHorizontal_weight="2"/>
        <ToggleButton
            android:id="@+id/music_toggle"
            android:layout_width="@dimen/px_xxh_120"
            android:layout_height="@dimen/px_xxh_120"
            style="@style/toggleButton"
            android:background="@drawable/sound_toggle_bg"
            app:layout_constraintTop_toBottomOf="@id/about_button"
            app:layout_constraintBottom_toBottomOf="@id/control"
            app:layout_constraintStart_toStartOf="@id/control"
            app:layout_constraintEnd_toEndOf="@id/control"/>
        <ImageButton
            android:id="@+id/about_button"
            android:layout_width="@dimen/px_xxh_120"
            android:layout_height="@dimen/px_xxh_120"
            android:src="@drawable/info_black_24dp"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="@id/control"
            app:layout_constraintBottom_toTopOf="@id/music_toggle"
            app:layout_constraintStart_toStartOf="@id/control"
            app:layout_constraintEnd_toEndOf="@id/control"/>
        <TextView
            android:id="@+id/intro"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="15dp"
            android:text="@string/main_sambutan"
            android:textSize="@dimen/font_size_1"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="20dp"
            android:background="@drawable/bg_gap"
            app:layout_constraintTop_toTopOf="@id/top"
            app:layout_constraintBottom_toBottomOf="@id/top"
            app:layout_constraintStart_toEndOf="@id/gia"
            app:layout_constraintEnd_toStartOf="@id/control"
            app:layout_constraintHorizontal_weight="5"/>
        <View
            android:id="@+id/bottom"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/top"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_weight="9"/>
        <View
            android:id="@+id/bottom_child_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toTopOf="@id/bottom"
            app:layout_constraintBottom_toTopOf="@id/bottom_child_1"
            app:layout_constraintStart_toStartOf="@id/bottom"
            app:layout_constraintEnd_toEndOf="@id/bottom"/>
        <Button
            android:id="@+id/item_title_0"
            android:text="@string/menu_item_0"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="@dimen/font_size_2"
            android:fontFamily="@font/chewy"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingHorizontal="5dp"
            android:background="@drawable/bg_button"
            app:layout_constraintTop_toTopOf="@id/bottom_child_0"
            app:layout_constraintBottom_toBottomOf="@id/bottom_child_0"
            app:layout_constraintStart_toStartOf="@id/bottom_child_0"
            app:layout_constraintEnd_toStartOf="@id/item_sub_0"/>
        <View
            android:id="@+id/item_sub_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/bottom_child_0"
            app:layout_constraintBottom_toBottomOf="@id/bottom_child_0"
            app:layout_constraintStart_toEndOf="@id/item_title_0"
            app:layout_constraintEnd_toEndOf="@id/bottom_child_0"/>
        <View
            android:id="@+id/bottom_child_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/bottom_child_0"
            app:layout_constraintBottom_toTopOf="@id/bottom_child_2"
            app:layout_constraintStart_toStartOf="@id/bottom"
            app:layout_constraintEnd_toEndOf="@id/bottom"/>
        <Button
            android:id="@+id/item_title_1"
            android:text="@string/menu_item_1"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="@dimen/font_size_2"
            android:fontFamily="@font/chewy"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_button"
            android:paddingHorizontal="5dp"
            app:layout_constraintTop_toTopOf="@id/bottom_child_1"
            app:layout_constraintBottom_toBottomOf="@id/bottom_child_1"
            app:layout_constraintStart_toStartOf="@id/bottom_child_1"
            app:layout_constraintEnd_toStartOf="@id/item_sub_1"/>
        <TextView
            android:id="@+id/item_sub_1"
            android:text="@string/menu_item_sub_1"
            android:gravity="center"
            android:textSize="@dimen/font_size_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/bottom_child_1"
            app:layout_constraintBottom_toBottomOf="@id/bottom_child_1"
            app:layout_constraintStart_toEndOf="@id/item_title_1"
            app:layout_constraintEnd_toEndOf="@id/bottom_child_1"/>
        <View
            android:id="@+id/bottom_child_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/bottom_child_1"
            app:layout_constraintBottom_toTopOf="@id/bottom_child_3"
            app:layout_constraintStart_toStartOf="@id/bottom"
            app:layout_constraintEnd_toEndOf="@id/bottom"/>
        <Button
            android:id="@+id/item_title_2"
            android:text="@string/menu_item_2"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="@dimen/font_size_2"
            android:fontFamily="@font/chewy"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_button"
            android:paddingHorizontal="5dp"
            app:layout_constraintTop_toTopOf="@id/bottom_child_2"
            app:layout_constraintBottom_toBottomOf="@id/bottom_child_2"
            app:layout_constraintStart_toStartOf="@id/bottom_child_2"
            app:layout_constraintEnd_toStartOf="@id/item_sub_2"/>
        <TextView
            android:id="@+id/item_sub_2"
            android:text="@string/menu_item_sub_2"
            android:gravity="center"
            android:textSize="@dimen/font_size_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/bottom_child_2"
            app:layout_constraintBottom_toBottomOf="@id/bottom_child_2"
            app:layout_constraintStart_toEndOf="@id/item_title_2"
            app:layout_constraintEnd_toEndOf="@id/bottom_child_2"/>
        <View
            android:id="@+id/bottom_child_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/bottom_child_2"
            app:layout_constraintBottom_toTopOf="@id/bottom_child_4"
            app:layout_constraintStart_toStartOf="@id/bottom"
            app:layout_constraintEnd_toEndOf="@id/bottom"/>
        <Button
            android:id="@+id/item_title_3"
            android:text="@string/menu_item_3"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="@dimen/font_size_2"
            android:fontFamily="@font/chewy"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_button"
            android:paddingHorizontal="5dp"
            app:layout_constraintTop_toTopOf="@id/bottom_child_3"
            app:layout_constraintBottom_toBottomOf="@id/bottom_child_3"
            app:layout_constraintStart_toStartOf="@id/bottom_child_3"
            app:layout_constraintEnd_toStartOf="@id/item_sub_3"/>
        <TextView
            android:id="@+id/item_sub_3"
            android:text="@string/menu_item_sub_3"
            android:gravity="center"
            android:textSize="@dimen/font_size_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/bottom_child_3"
            app:layout_constraintBottom_toBottomOf="@id/bottom_child_3"
            app:layout_constraintStart_toEndOf="@id/item_title_3"
            app:layout_constraintEnd_toEndOf="@id/bottom_child_3"/>
        <View
            android:id="@+id/bottom_child_4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toBottomOf="@id/bottom_child_3"
            app:layout_constraintBottom_toTopOf="@id/bottom_child_5"
            app:layout_constraintStart_toStartOf="@id/bottom"
            app:layout_constraintEnd_toEndOf="@id/bottom"/>
        <Button
            android:id="@+id/item_title_4"
            android:text="@string/menu_item_4"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="@dimen/font_size_2"
            android:fontFamily="@font/chewy"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_button"
            android:paddingHorizontal="5dp"
            app:layout_constraintTop_toTopOf="@id/bottom_child_4"
            app:layout_constraintBottom_toBottomOf="@id/bottom_child_4"
            app:layout_constraintStart_toStartOf="@id/bottom_child_4"
            app:layout_constraintEnd_toStartOf="@id/item_sub_4"/>
        <TextView
            android:id="@+id/item_sub_4"
            android:text="@string/menu_item_sub_4"
            android:gravity="center"
            android:textSize="@dimen/font_size_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/bottom_child_4"
            app:layout_constraintBottom_toBottomOf="@id/bottom_child_4"
            app:layout_constraintStart_toEndOf="@id/item_title_4"
            app:layout_constraintEnd_toEndOf="@id/bottom_child_4"/>
        <View
            android:id="@+id/bottom_child_5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/bottom_child_4"
            app:layout_constraintBottom_toBottomOf="@id/bottom"
            app:layout_constraintStart_toStartOf="@id/bottom"
            app:layout_constraintEnd_toEndOf="@id/bottom"/>
        <Button
            android:id="@+id/item_title_5"
            android:text="@string/menu_item_5"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="@dimen/font_size_2"
            android:fontFamily="@font/chewy"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/bg_button"
            android:paddingHorizontal="5dp"
            app:layout_constraintTop_toTopOf="@id/bottom_child_5"
            app:layout_constraintBottom_toBottomOf="@id/bottom_child_5"
            app:layout_constraintStart_toStartOf="@id/bottom_child_5"
            app:layout_constraintEnd_toStartOf="@id/item_sub_5"/>
        <TextView
            android:id="@+id/item_sub_5"
            android:text="@string/menu_item_sub_5"
            android:gravity="center"
            android:textSize="@dimen/font_size_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toTopOf="@id/bottom_child_5"
            app:layout_constraintBottom_toBottomOf="@id/bottom_child_5"
            app:layout_constraintStart_toEndOf="@id/item_title_5"
            app:layout_constraintEnd_toEndOf="@id/bottom_child_5"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>