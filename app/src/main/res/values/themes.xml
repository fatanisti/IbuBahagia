<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IbuBahagia" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_main</item>
        <item name="colorPrimaryVariant">@color/purple_sub</item>
        <item name="colorOnPrimary">@color/cream_main</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>
    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="android:background">@drawable/sound_toggle_bg</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>
    <style name="toggleButton"  parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
    </style>
    <style name="TitleFontStyle">
        <item name="android:textSize">@dimen/font_size_title</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/purple_main</item>
        <item name="fontFamily">@font/chewy</item>
    </style>
    <style name="SubtitleFontStyle">
        <item name="autoSizeTextType">uniform</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/chewy</item>
    </style>
    <style name="Subtitle2FontStyle">
        <item name="android:textSize">@dimen/font_size_5</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>